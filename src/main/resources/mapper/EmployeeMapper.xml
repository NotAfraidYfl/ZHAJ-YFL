	<select id="selectByExampleWithDept" parameterType="com.zhaj.bean.EmployeeExample"
		resultMap="BaseResltMapWithDept">
		select
		<if test="distinct">
			distinct
		</if>
		<include refid="withDept_Colum_list" />
		from tb_emp e
		LEFT JOIN tb_dept d ON e.d_id = d.dept_id
